<Window x:Class="LibraryManagementApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LibraryManagementApp"
        xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
        mc:Ignorable="d"
        Title="Connexion - Gestion de Bibliothèque" Height="600" Width="800" Background="{StaticResource ResourceKey=BackgroundGradient}">

    <Window.Resources>

        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="288">

            <!-- Section Connexion -->
            <TextBlock Text="Connexion" FontSize="24" FontWeight="Bold" Foreground="White" Margin="0,0,0,20" HorizontalAlignment="Center" FontFamily="{StaticResource RobotoRegular}"/>

            <StackPanel Margin="0,0,0,10">
                <TextBlock Text="Nom d'utilisateur" 
                           Foreground="LightGray" 
                           Margin="5,0,0,3" 
                           VerticalAlignment="Center" 
                           FontSize="18" 
                           FontWeight="Bold"
                           FontFamily="{StaticResource RobotoRegular}"/>

                <Border Background="#1A1A1A" BorderBrush="#00BFFF" BorderThickness="2" CornerRadius="5" Margin="0,0,0,10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Icon:PackIconMaterial Kind="Account" 
                                                Width="24" 
                                                Height="24" 
                                                Margin="5" 
                                                Foreground="LightGray"/>
                        <TextBox x:Name="UsernameTextBox" 
                                 Background="Transparent" 
                                 Foreground="White" 
                                 BorderThickness="0" 
                                 FontSize="16"
                                 FontFamily="Roboto"
                                 Margin="25,0,25,0"
                                 CaretBrush="White"
                                 Padding="5" Grid.ColumnSpan="2"/>
                    </Grid>
                </Border>

                <TextBlock Text="Mot de passe" 
                           Foreground="LightGray" 
                           Margin="5,0,0,3" 
                           VerticalAlignment="Center" 
                           FontSize="18" 
                           FontWeight="Bold"
                           FontFamily="{StaticResource RobotoRegular}"/>  
                
                
                
                <Border Background="#1A1A1A" BorderBrush="#00BFFF" BorderThickness="2" CornerRadius="5">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Icone pour le champ mot de passe -->
                        <Icon:PackIconMaterial Kind="Lock" 
                                Width="24" 
                                Height="24" 
                                Margin="5" 
                                Foreground="LightGray"/>

                        <!-- PasswordBox pour la saisie du mot de passe -->
                        <PasswordBox x:Name="PasswordBox" 
                              Background="Transparent" 
                              Foreground="White" 
                              BorderThickness="0" 
                              FontSize="16"
                              FontFamily="Roboto"
                              Margin="0,0,0,0"
                              CaretBrush="White"
                              Padding="0,5,5,5" Grid.Column="1"/>

                        <!-- TextBox pour afficher le mot de passe en clair -->
                        <TextBox x:Name="PasswordTextBox" 
                             Background="Transparent" 
                             Foreground="White"
                             BorderThickness="0" 
                             FontSize="16"
                             FontFamily="Roboto"
                             Margin="0,0,0,0"
                             CaretBrush="White"
                             Padding="0,5,5,5"
                             Visibility="Collapsed" 
                             Grid.Column="1"
                        />  

                        <!-- ToggleButton pour afficher/masquer le mot de passe -->
                        <ToggleButton x:Name="TogglePasswordVisibility" 
              Grid.Column="2" 
              Width="24"
              Height="24" 
              Margin="5"
              Cursor="Hand"        
              VerticalAlignment="Center" 
              Background="Transparent"
              BorderThickness="0"
              IsChecked="False"
              Click="TogglePasswordVisibility_Click">
                            <ToggleButton.Template>
                                <ControlTemplate TargetType="ToggleButton">
                                    <Grid>
                                        <Icon:PackIconMaterial x:Name="EyeIcon" 
                                        Kind="EyeOff" 
                                        Width="24" 
                                        Height="24"
                                        Foreground="LightGray"/>
                                        <!-- Couleur de l'icône -->
                                    </Grid>
                                </ControlTemplate>
                            </ToggleButton.Template>

                            <ToggleButton.Style>
                                <Style TargetType="ToggleButton">
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="BorderThickness" Value="0"/>
                                    <Setter Property="Foreground" Value="Transparent"/>
                                    <!-- Aucun texte visible -->
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="Transparent"/>
                                            <!-- Pas de couleur pendant le hover -->
                                        </Trigger>
                                        <Trigger Property="IsChecked" Value="True">
                                            <Setter Property="Background" Value="Transparent"/>
                                            <!-- Pas de couleur lorsqu'il est activé -->
                                        </Trigger>
                                        <Trigger Property="IsFocused" Value="True">
                                            <Setter Property="Background" Value="Transparent"/>
                                            <!-- Pas de couleur de focus -->
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </ToggleButton.Style>
                        </ToggleButton>

                    </Grid>
                </Border>

            </StackPanel>

            <Button Content="Se connecter"
                    FontFamily="{StaticResource RobotoRegular}"
                    Style="{StaticResource LoginButtonStyle}" Height="40" 
                    />

            <StackPanel Orientation="Horizontal" Margin="5,10,5,5">
                <TextBlock Text="Pas encore de compte?" 
                           FontSize="16" 
                           Foreground="LightGray" 
                           HorizontalAlignment="Center" 
                           Margin="0,0,5,5"
                           FontFamily="{StaticResource RobotoRegular}"/>
                <TextBlock Text="Inscrivez-vous!"
                           FontSize="16"
                           Foreground="LightGray"
                           Cursor="Hand"
                           
                           FontFamily="{StaticResource RobotoItalic}"/>
            </StackPanel>
        </StackPanel>

    </Grid>
</Window>
